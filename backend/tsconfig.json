{
	"compilerOptions": {
	  "target": "ES2020",                 
	  "module": "commonjs",               
	  "lib": ["ES2020"],                  
	  "sourceMap": true,                  
	  "rootDir": "src",                   
	  "strict": true,                     
	  "outDir": "./dist",                 
	  "noImplicitAny": true,              
	  "strictNullChecks": true,           
	  "strictFunctionTypes": true,        
	  "strictBindCallApply": true,        
	  "strictPropertyInitialization": true,
	  "noImplicitThis": true,             
	  "alwaysStrict": true,               
	  "types": ["jest"],                  
	  "esModuleInterop": true,            
	  "skipLibCheck": true,               
	  "forceConsistentCasingInFileNames": true,
	  "removeComments": true,             
	  "declaration": true,                
	  "allowJs": true,                    
	  "checkJs": false,                   
	  "jsx": "preserve",      
	  "noImplicitReturns": true,          
	  "noFallthroughCasesInSwitch": true  
	},
	"include": [
	  "src/**/*.ts"
	],
	"exclude": [
	  "node_modules"
	]
  }